<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->

	<EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_minTemp"
        android:inputType="number"
        android:key="@string/pref_key_minTemp"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_minTemp" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_maxTemp"
        android:inputType="number"
        android:key="@string/pref_key_maxTemp"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_maxTemp" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_key_show_limits"
        android:summary="@string/pref_description_show_limits"
        android:title="@string/pref_title_show_limits" />
    
</PreferenceScreen>